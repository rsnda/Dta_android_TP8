<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.dta_android_tp8.MainActivity">

    <EditText
        android:id="@+id/eT_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintLeft_toRightOf="@+id/tV_phone_info"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/eT_message_content"
        android:layout_width="361dp"
        android:layout_height="319dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/message_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/eT_phone_number"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tV_phone_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_info"
        android:layout_marginLeft="37dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="359dp"
        android:layout_height="78dp"
        android:text="@string/send_button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/eT_message_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.516"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
